    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make aj=t",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run_app",
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make clean && make aj=t",
            "problemMatcher": []
        }
    ]
}